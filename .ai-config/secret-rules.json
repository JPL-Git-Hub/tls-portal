{
  "introspection": {
    "enabled": true,
    "version": "1.0.0",
    "description": "AI secret introspection rules - never ask for secrets"
  },
  "triggers": [
    {
      "patterns": [
        "api key",
        "secret key",
        "token",
        "credential",
        "password",
        "what is your",
        "please provide",
        "enter your"
      ],
      "action": "check_before_asking"
    }
  ],
  "locations": {
    "firebase": {
      "path": "/config/.secrets/firebase-service-account.json",
      "env": "GOOGLE_APPLICATION_CREDENTIALS",
      "source": "Firebase Console > Project Settings > Service Accounts"
    },
    "stripe": {
      "path": "/config/.secrets/stripe-keys.env",
      "env": ["STRIPE_SECRET_KEY", "STRIPE_PUBLISHABLE_KEY", "STRIPE_WEBHOOK_SECRET"],
      "source": "Stripe Dashboard > API Keys"
    },
    "cloudflare": {
      "path": "/config/.secrets/cloudflare.env",
      "env": ["CLOUDFLARE_API_TOKEN", "CLOUDFLARE_ZONE_ID"],
      "source": "Cloudflare > My Profile > API Tokens"
    },
    "jwt": {
      "path": "/config/.secrets/jwt-secret.env",
      "env": "JWT_SECRET",
      "generate": "openssl rand -base64 32"
    },
    "sendgrid": {
      "path": "/config/.secrets/sendgrid.env",
      "env": "SENDGRID_API_KEY",
      "source": "SendGrid > Settings > API Keys"
    }
  },
  "responses": {
    "missing_secret": "Place your {secret_type} in: {location}",
    "check_location": "Checking for {secret_type} in: {location}",
    "found_secret": "Found {secret_type} in expected location",
    "never_ask": "I won't ask for your {secret_type}. If needed, place it in: {location}"
  },
  "workflow": [
    "1. Detect secret requirement",
    "2. Check standard locations",
    "3. If found: proceed silently",
    "4. If missing: guide to location",
    "5. Never ask for the value"
  ]
}